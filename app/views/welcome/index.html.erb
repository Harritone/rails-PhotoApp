<% if current_user %>
  <h3>Welcome: <%= current_user.email %></h3>
<% else %>
  <div class="jumbotron">
    <h2>Welcome to the Photo Management App!</h2>
    <p class="lead">
      You'll love managing your Photos with our application. Sign up!
    </p>
  </div>
  <div class="container-fluid content-row">
    <div class="row">
      <div class="col-sm-12 col-lg-6">
        <div class="card h-100">
          <div class="card-body">
            <h2 class="card-title text-center">Premium plan</h2>
            <h3 class="card-text">Price: 10$.</h3>
            <ul>
              <li>Unlimited Image Uploads</li>
              <li>Responsive design</li>
              <li>Access anywhere</li>
            </ul>
            <div class="text-center">
              <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-12 col-lg-6">
        <div class="card h-100">
          <div class="card-body">
            <h2 class="card-title text-center">Amaze plan</h2>
            <h3 class="card-text">Price: 20$.</h3>
            <ul>
              <li>Unlimited Image Uploads</li>
              <li>Responsive design</li>
              <li>Access anywhere</li>
              <li>Unlimited projects</li>
            </ul>
            <div class="text-center">
              <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary sign-up' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
